<!DOCTYPE html>
<html lang="en" dir="ltr">
  <head>
    <% include partials/head.ejs %>
  </head>
  <body>
    <% include partials/navbar.ejs %>
    <div class="container mt-3 mb-2">
      <div class="row">
        <div class="col-12 text-center">
          <h1>Login</h1>
        </div>
      </div>
    </div>

    <div class="container mt-5 mb-5">
      <div class="row d-flex justify-content-center">
        <div class="col-md-8">
          <form class="p-3 border border-success rounded" method="POST" action="/login">
            <div class="form-group">
              <label for="inputEmail">Email</label>
              <input type="email" class="form-control" name="email" id="inputEmail" aria-describedby="email" placeholder="Enter email">
            </div>
            <div class="form-group">
              <label for="inputPassword">Password</label>
              <input type="password" class="form-control" name="password" id="inputPassword" aria-describedby="password" placeholder="Enter password">
            </div>
            <input type="submit" class="btn btn-outline-primary" value="Submit">
          </form>
        </div>
      </div>
    </div>

    <% include partials/footer.ejs %>
    <% include partials/scripts.ejs %>
  </body>
</html>
